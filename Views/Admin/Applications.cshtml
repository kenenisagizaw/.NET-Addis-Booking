@model IEnumerable<AddisBookingAdmin.Models.ProviderApplication>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold">Pending Provider Applications</h2>
    <span class="text-muted">@Model.Count() application(s)</span>
    <!-- Toast Notifications -->
    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <div class="toast-container position-fixed top-0 end-0 p-3">
            <div class="toast show align-items-center text-white
                    @(TempData["Success"] != null ? "bg-success" : "bg-danger") border-0" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @(TempData["Success"] ?? TempData["Error"])
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>
    }
</div>

<div class="table-responsive shadow-sm rounded bg-white">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-dark">
            <tr>
                <th>Full Name</th>
                <th>Business</th>
                <th>Phone</th>
                <th>Documents</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        No pending applications
                    </td>
                </tr>
            }
            else
            {
                foreach (var app in Model)
                {
                    <tr>
                        <td>@app.FullName</td>
                        <td>@app.BusinessName</td>
                        <td>@app.Phone</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                                data-bs-target="#documentsModal-@app.Id">
                                <i class="bi bi-folder2-open"></i> View Documents
                            </button>
                        </td>
                        <td class="text-center">
                            <a asp-action="Approve" asp-route-id="@app.Id" class="btn btn-sm btn-success me-1">
                                <i class="bi bi-check-circle"></i> Approve
                            </a>
                            <a asp-action="Reject" asp-route-id="@app.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-x-circle"></i> Reject
                            </a>
                        </td>
                    </tr>

                    <!-- DOCUMENTS MODAL -->
                    <div class="modal fade" id="documentsModal-@app.Id" tabindex="-1"
                        aria-labelledby="documentsModalLabel-@app.Id" aria-hidden="true">
                        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="modal-header bg-primary text-white">
                                    <h5 class="modal-title" id="documentsModalLabel-@app.Id">
                                        Documents â€“ @app.FullName
                                    </h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>

                                <div class="modal-body">
                                    <div class="row g-4">

                                        <!-- National ID -->
                                        <div class="col-md-6">
                                            <h6 class="fw-bold mb-2">National ID</h6>
                                            <iframe src="@app.NationalIdPath" class="w-100 border rounded"
                                                style="height: 500px;"></iframe>
                                        </div>

                                        <!-- Business License -->
                                        <div class="col-md-6">
                                            <h6 class="fw-bold mb-2">Business License</h6>
                                            <iframe src="@app.BusinessLicensePath" class="w-100 border rounded"
                                                style="height: 500px;"></iframe>
                                        </div>

                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button class="btn btn-secondary" data-bs-dismiss="modal">
                                        Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </tbody>
    </table>
</div>