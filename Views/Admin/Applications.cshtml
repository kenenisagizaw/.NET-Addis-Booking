@model IEnumerable<AddisBookingAdmin.Models.ProviderApplication>

<h2>Pending Provider Applications</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Business</th>
            <th>Phone</th>
            <th>Documents</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var app in Model)
{
        <tr>
            <td>@app.FullName</td>
            <td>@app.BusinessName</td>
            <td>@app.Phone</td>
            <td>
                <a href="@app.NationalIdPath" target="_blank">National ID</a> |
                <a href="@app.BusinessLicensePath" target="_blank">License</a>
            </td>
            <td>
                <a asp-action="Approve" asp-route-id="@app.Id" class="btn btn-success">Approve</a>
                <a asp-action="Reject" asp-route-id="@app.Id" class="btn btn-danger">Reject</a>
            </td>
        </tr>
}
    </tbody>
</table>
