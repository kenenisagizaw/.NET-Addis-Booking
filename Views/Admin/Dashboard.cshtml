@model AddisBookingAdmin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="text-3xl font-bold mb-4">Admin Dashboard</h1>

<div class="grid grid-cols-2 gap-4 mb-6">
    <div class="bg-white shadow rounded p-4">
        <h2 class="text-xl font-semibold">Total Users</h2>
        <p class="text-2xl">@Model.TotalUsers</p>
    </div>
    <div class="bg-white shadow rounded p-4">
        <h2 class="text-xl font-semibold">Total Providers</h2>
        <p class="text-2xl">@Model.TotalProviders</p>
    </div>
    <div class="bg-white shadow rounded p-4">
        <h2 class="text-xl font-semibold">Total Services</h2>
        <p class="text-2xl">@Model.TotalServices</p>
    </div>
    <div class="bg-white shadow rounded p-4">
        <h2 class="text-xl font-semibold">Pending Providers</h2>
        <p class="text-2xl">@Model.TotalPendingProviders</p>
    </div>
</div>