@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="text-3xl font-bold mb-4">Providers</h1>

<table class="min-w-full bg-white shadow rounded">
    <thead>
        <tr class="bg-gray-200 text-left">
            <th class="p-2">Name</th>
            <th class="p-2">Email</th>
            <th class="p-2">Approved</th>
            <th class="p-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var provider in Model)
        {
            <tr>
                <td class="p-2">@provider.FullName</td>
                <td class="p-2">@provider.Email</td>
                <td class="p-2">@provider.ProviderApproved</td>
                <td class="p-2">
                    <a href="/Provider/Approve/@provider.Id" class="text-green-600 mr-2">Approve</a>
                    <a href="/Provider/Deny/@provider.Id" class="text-red-600">Deny</a>
                </td>
            </tr>
        }
    </tbody>
</table>
