@model AddisBookingAdmin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="text-3xl font-bold mb-4">Admin Dashboard</h1>

<div class="row g-4 mb-6">
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm h-100 bg-body-tertiary">
            <div class="card-body">
                <h2 class="card-title text-xl">Total Users</h2>
                <p class="card-text fs-2 fw-bold">@Model.TotalUsers</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm h-100 bg-body-tertiary">
            <div class="card-body">
                <h2 class="card-title text-xl">Total Providers</h2>
                <p class="card-text fs-2 fw-bold">@Model.TotalProviders</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm h-100 bg-body-tertiary">
            <div class="card-body">
                <h2 class="card-title text-xl">Total Services</h2>
                <p class="card-text fs-2 fw-bold">@Model.TotalServices</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm h-100 bg-body-tertiary">
            <div class="card-body">
                <h2 class="card-title text-xl">Pending Providers</h2>
                <p class="card-text fs-2 fw-bold">@Model.TotalPendingProviders</p>
            </div>
        </div>
    </div>
</div>