@model IEnumerable<AddisBookingAdmin.Models.ProviderApplication>
@{
    ViewData["Title"] = "Pending Providers";
}

<h1 class="text-2xl font-bold mb-4">Pending Provider Applications</h1>
<table class="table-auto w-full">
    <thead>
        <tr>
            <th class="px-4 py-2">Applicant Name</th>
            <th class="px-4 py-2">Email</th>
            <th class="px-4 py-2">Business Name</th>
            <th class="px-4 py-2">Phone</th>
            <th class="px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var app in Model)
    {
        <tr>
            <td class="border px-4 py-2">@app.FullName</td>
            <td class="border px-4 py-2">@app.User?.Email</td>
            <td class="border px-4 py-2">@app.BusinessName</td>
            <td class="border px-4 py-2">@app.Phone</td>
            <td class="border px-4 py-2">
                <a asp-action="Approve" asp-route-id="@app.Id" class="btn btn-success btn-sm">Approve</a>
                <a asp-action="Reject" asp-route-id="@app.Id" class="btn btn-danger btn-sm">Reject</a>
            </td>
        </tr>
    }
    </tbody>
</table>
