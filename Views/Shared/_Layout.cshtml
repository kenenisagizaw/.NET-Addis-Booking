@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AddisServe</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="@(User.IsInRole("Admin") ? "has-sidebar" : "")">
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow">
        <div class="container-fluid">
            @if (User.IsInRole("Admin"))
            {
                <button class="btn btn-outline-light me-2 d-lg-none" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
            }

            <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-building"></i> AddisServe
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Provider"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Provider" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Service" asp-action="Index">My Services</a>
                            </li>
                        }
                        else if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a></li>
                    }

                    @if (User.IsInRole("Customer"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Provider" asp-action="Apply">Become a Provider</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Providers">Providers</a></li>
                    }
                </ul>

                <ul class="navbar-nav align-items-center">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-2">@User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </li>
                    }
                    <li class="nav-item ms-3">
                        <button class="btn btn-outline-light" id="darkModeToggle">
                            <span id="themeIcon">🌙</span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @* ADMIN SIDEBAR *@
    @if (User.IsInRole("Admin"))
    {
        <div id="adminSidebar">
            <nav class="nav flex-column">
                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                <a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a>
                <a class="nav-link" asp-controller="Admin" asp-action="Providers">Providers</a>
                <a class="nav-link" asp-controller="Admin" asp-action="Applications">Applications</a>
                <a class="nav-link" asp-controller="Admin" asp-action="Services">Services</a>
            </nav>
        </div>
    }

    <!-- MAIN CONTENT -->
    <main class="main-content mt-5">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer bg-dark text-light text-center py-3 mt-auto">
        &copy; @DateTime.Now.Year AddisServe. All rights reserved.
    </footer>

    <!-- SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Dark mode toggle
        const toggle = document.getElementById('darkModeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const htmlEl = document.documentElement;

        const savedTheme = localStorage.getItem('theme') || 'light';
        htmlEl.setAttribute('data-bs-theme', savedTheme);

        function updateThemeIcon() {
            themeIcon.textContent = htmlEl.getAttribute('data-bs-theme') === 'dark' ? '☀️' : '🌙';
        }
        updateThemeIcon();

        toggle.addEventListener('click', () => {
            const newTheme = htmlEl.getAttribute('data-bs-theme') === 'dark' ? 'light' : 'dark';
            htmlEl.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon();
        });

        // Sidebar toggle for mobile
        const sidebarToggle = document.getElementById('sidebarToggle');
        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', () => {
                document.body.classList.toggle('sidebar-open');
            });
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
