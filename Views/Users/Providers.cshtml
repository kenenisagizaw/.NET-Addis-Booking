@model IEnumerable<AddisBookingAdmin.Models.Provider>

@{
    ViewData["Title"] = "Providers";
    var index = 1;
}

<div class="container mt-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">Service Providers</h3>
        <span class="text-muted">@Model.Count() providers</span>
    </div>

    <!-- Card Wrapper -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">#</th>
                            <th>Business Name</th>
                            <th>Phone</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    No providers found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var provider in Model)
                            {
                                <tr>
                                    <td class="text-center fw-semibold">@index</td>

                                    <td>
                                        <div class="fw-semibold">@provider.BusinessName</div>
                                    </td>

                                    <td>
                                        <span class="badge bg-light text-dark">
                                            @provider.Phone
                                        </span>
                                    </td>

                                    <td class="text-center">
                                        <a class="btn btn-outline-primary btn-sm"
                                           href="@Url.Action("ProviderServices", "Users", new { providerId = provider.Id })">
                                            View Services
                                        </a>
                                    </td>
                                </tr>

                                index++;
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>
