@model IEnumerable<AddisBookingAdmin.Models.Provider>

@{
    ViewData["Title"] = "Providers List";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="display-6 fw-bold text-primary">Providers List</h2>
            <p class="text-muted">Manage and view all service providers in the system</p>
        </div>
        <div>
            <a href="#" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Provider
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Providers</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                        <div class="bg-primary text-white rounded-circle p-3">
                            <i class="bi bi-people-fill fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Table Card -->
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list-columns"></i> All Providers
                </h5>
                <div class="d-flex">
                    <input type="text" class="form-control form-control-sm me-2" placeholder="Search providers..."
                        id="searchInput">
                    <button class="btn btn-light btn-sm">
                        <i class="bi bi-filter"></i> Filter
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="providersTable">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-center">#</th>
                            <th scope="col">
                                <i class="bi bi-building me-1"></i> Business Name
                            </th>
                            <th scope="col">
                                <i class="bi bi-telephone me-1"></i> Phone
                            </th>
                            <th scope="col">
                                <i class="bi bi-gear me-1"></i> Services
                            </th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                        }
                        @foreach (var provider in Model)
                        {
                            <tr>
                                <td class="text-center fw-bold">@i</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-3">
                                            <i class="bi bi-shop"></i>
                                        </div>
                                        <div>
                                            <strong>@provider.BusinessName</strong>
                                            <div class="text-muted small">
                                                <i class="bi bi-geo-alt"></i>
                                                @(provider.Address ?? "Address not specified")
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-telephone text-success me-2"></i>
                                        <a href="tel:@provider.Phone" class="text-decoration-none">
                                            @provider.Phone
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <a class="btn btn-outline-primary btn-sm"
                                        href="@Url.Action("ProviderServices", "Users", new { providerId = provider.Id })">
                                        <i class="bi bi-eye"></i> View Services
                                    </a>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="#" class="btn btn-outline-info btn-sm" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-success btn-sm" title="View Details">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>

            <!-- Empty State -->
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-people display-1 text-muted"></i>
                    </div>
                    <h4 class="text-muted">No Providers Found</h4>
                    <p class="text-muted">Start by adding your first service provider</p>
                    <a href="#" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Add Provider
                    </a>
                </div>
            }
        </div>

        <!-- Footer -->
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Showing <strong>@Model.Count()</strong> providers
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Optional JavaScript for search functionality -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchInput');
        const table = document.getElementById('providersTable');
        const rows = table.querySelectorAll('tbody tr');

        searchInput.addEventListener('keyup', function () {
            const filter = searchInput.value.toLowerCase();

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        });
    });
</script>

<style>
    .card {
        border-radius: 10px;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-group .btn {
        border-radius: 5px;
        margin: 0 2px;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .card-footer {
        border-radius: 0 0 10px 10px;
    }

    .bg-opacity-10 {
        background-color: rgba(var(--bs-primary-rgb), 0.1) !important;
    }
</style>