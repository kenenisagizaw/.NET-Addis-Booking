@model IEnumerable<AddisBookingAdmin.Models.Provider>

@{
    ViewData["Title"] = "Providers";
}

<div class="container mt-4">

    <!-- Page Title -->
    <div class="mb-4">
        <h3 class="fw-bold">Service Providers</h3>
        <p class="text-muted">Choose a provider to view available services</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No providers available at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var provider in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title fw-semibold">
                                @provider.BusinessName
                            </h5>

                            <p class="card-text text-muted mb-2">
                                ðŸ“ž @provider.Phone
                            </p>

                            <div class="mt-auto">
                                <a href="@Url.Action("ProviderServices", "Users", new { providerId = provider.Id })"
                                   class="btn btn-primary w-100">
                                    View Services
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>
