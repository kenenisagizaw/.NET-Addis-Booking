@model IEnumerable<AddisBookingAdmin.Models.User>
@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Add New User</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
