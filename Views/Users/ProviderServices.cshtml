@model IEnumerable<AddisBookingAdmin.Models.Service>
@{
    ViewData["Title"] = "Available Services";
    var providerName = ViewBag.ProviderName as string;
}

<h3 class="mb-4">Services by @providerName</h3>

<div class="row">
@foreach (var service in Model)
{
    <div class="col-md-4 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                
                <h5 class="card-title">@service.Name</h5>

                <span class="badge bg-success mb-2">
                    @service.Price.ToString("N0") ETB
                </span>

                <p class="card-text text-muted mt-2">
                    @service.Description
                </p>

            </div>
        </div>
    </div>
}
</div>
