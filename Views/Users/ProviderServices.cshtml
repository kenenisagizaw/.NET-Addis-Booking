@model IEnumerable<AddisBookingAdmin.Models.Service>
@{
    ViewData["Title"] = "Provider Services";
    var providerName = ViewBag.ProviderName as string;
}

<h2>Services for @providerName</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Price</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
    @{ var i = 1; }
    @foreach (var service in Model)
    {
        <tr>
            <td>@i</td>
            <td>@service.Price</td>
            <td>@service.Name</td>
            <td>@service.Description</td>
        </tr>
        i++;
    }
    </tbody>
</table>
