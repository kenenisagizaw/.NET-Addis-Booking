@model AddisBookingAdmin.Models.DTOs.LoginDto
@{
    ViewData["Title"] = "Login";
}

<!-- Bootstrap Icons CDN (add once in _Layout.cshtml ideally) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container d-flex justify-content-center align-items-center min-vh-100 py-5">

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden bg-body" style="max-width: 420px; width: 100%;">

        <!-- Header -->
        <div class="card-header text-center py-4 bg-primary text-white">
            <h3 class="mb-0 fw-bold">Welcome Back</h3>
            <small class="opacity-75">Login to continue</small>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <form asp-action="Login" method="post">

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email"
                           class="form-control form-control-lg rounded-3 bg-body text-body"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Password with Eye Icon -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>

                    <div class="input-group input-group-lg">
                        <input asp-for="Password"
                               id="passwordInput"
                               type="password"
                               class="form-control rounded-start-3 bg-body text-body"
                               placeholder="Enter your password" />

                        <button class="btn btn-outline-secondary rounded-end-3"
                                type="button"
                                id="togglePasswordBtn"
                                aria-label="Show password">
                            <i class="bi bi-eye" id="togglePasswordIcon"></i>
                        </button>
                    </div>

                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Button -->
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-semibold">
                        Login
                    </button>
                </div>

                <!-- Register Link -->
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Donâ€™t have an account?
                        <a asp-action="Register" asp-controller="Account" class="text-primary fw-semibold text-decoration-none">
                            Register
                        </a>
                    </small>
                </div>

            </form>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const input = document.getElementById("passwordInput");
            const btn = document.getElementById("togglePasswordBtn");
            const icon = document.getElementById("togglePasswordIcon");

            btn.addEventListener("click", function () {
                const isPassword = input.type === "password";
                input.type = isPassword ? "text" : "password";

                // toggle icon
                icon.classList.toggle("bi-eye");
                icon.classList.toggle("bi-eye-slash");

                btn.setAttribute("aria-label", isPassword ? "Hide password" : "Show password");
            });
        })();
    </script>
}
