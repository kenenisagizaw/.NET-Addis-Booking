@model AddisBookingAdmin.Models.DTOs.RegisterDto
@{
    ViewData["Title"] = "Register";
}

<!-- Bootstrap Icons CDN (add once in _Layout.cshtml ideally) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container d-flex justify-content-center align-items-center min-vh-100 py-5">

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden bg-body" style="max-width: 460px; width: 100%;">

        <!-- Header -->
        <div class="card-header text-center py-4 bg-primary text-white">
            <h3 class="mb-0 fw-bold">Create Account</h3>
            <small class="opacity-75">Register to get started</small>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <form asp-action="Register" method="post">

                <!-- Full Name -->
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                    <input asp-for="FullName"
                           class="form-control form-control-lg rounded-3 bg-body text-body"
                           placeholder="Enter your full name" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email"
                           class="form-control form-control-lg rounded-3 bg-body text-body"
                           placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Password with Eye -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>

                    <div class="input-group input-group-lg">
                        <input asp-for="Password"
                               id="passwordInput"
                               type="password"
                               class="form-control rounded-start-3 bg-body text-body"
                               placeholder="Create a password" />
                        <button class="btn btn-outline-secondary rounded-end-3"
                                type="button"
                                id="togglePasswordBtn"
                                aria-label="Show password">
                            <i class="bi bi-eye" id="togglePasswordIcon"></i>
                        </button>
                    </div>

                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Confirm Password with Eye -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>

                    <div class="input-group input-group-lg">
                        <input asp-for="ConfirmPassword"
                               id="confirmPasswordInput"
                               type="password"
                               class="form-control rounded-start-3 bg-body text-body"
                               placeholder="Confirm your password" />
                        <button class="btn btn-outline-secondary rounded-end-3"
                                type="button"
                                id="toggleConfirmPasswordBtn"
                                aria-label="Show confirm password">
                            <i class="bi bi-eye" id="toggleConfirmPasswordIcon"></i>
                        </button>
                    </div>

                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Button -->
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-semibold">
                        Register
                    </button>
                </div>

                <!-- Login Link -->
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Already have an account?
                        <a asp-action="Login" asp-controller="Auth" class="text-primary fw-semibold text-decoration-none">
                            Login
                        </a>
                    </small>
                </div>

            </form>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            function setupToggle(inputId, btnId, iconId, showLabel, hideLabel) {
                const input = document.getElementById(inputId);
                const btn = document.getElementById(btnId);
                const icon = document.getElementById(iconId);

                btn.addEventListener("click", function () {
                    const isPassword = input.type === "password";
                    input.type = isPassword ? "text" : "password";

                    icon.classList.toggle("bi-eye");
                    icon.classList.toggle("bi-eye-slash");

                    btn.setAttribute("aria-label", isPassword ? hideLabel : showLabel);
                });
            }

            setupToggle("passwordInput", "togglePasswordBtn", "togglePasswordIcon", "Show password", "Hide password");
            setupToggle("confirmPasswordInput", "toggleConfirmPasswordBtn", "toggleConfirmPasswordIcon", "Show confirm password", "Hide confirm password");
        })();
    </script>
}
