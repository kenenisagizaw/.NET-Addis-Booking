@model AddisBookingAdmin.Models.Service

@{
    ViewData["Title"] = "Add Service";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">

    <!-- Title + Back -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">@ViewData["Title"]</h2>
            <p class="text-body-secondary mb-0">Create a new service and make it available to customers</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-3">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 bg-body overflow-hidden">

        <!-- Header -->
        <div class="card-header bg-primary text-white py-4 border-0">
            <div class="d-flex align-items-center">
                <div class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center"
                     style="width: 50px; height: 50px;">
                    <i class="bi bi-plus-circle-fill fs-4 text-white"></i>
                </div>
                <div class="ms-3">
                    <h4 class="mb-0 fw-semibold">New Service</h4>
                    <small class="opacity-75">Fill the form and click create</small>
                </div>
            </div>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <form asp-action="Create" method="post">

                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-body">
                            <i class="bi bi-card-text"></i>
                        </span>
                        <input asp-for="Name"
                               class="form-control rounded-end-3 bg-body text-body"
                               placeholder="Service name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-body fw-semibold">Birr</span>
                        <input asp-for="Price"
                               class="form-control rounded-end-3 bg-body text-body"
                               type="number"
                               step="0.01"
                               placeholder="0.00" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description"
                              class="form-control form-control-lg rounded-3 bg-body text-body"
                              rows="5"
                              placeholder="Service description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <hr class="my-4" />

                <!-- Actions -->
                <div class="d-flex justify-content-between gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-3">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-semibold">
                        <i class="bi bi-check2-circle me-1"></i> Create Service
                    </button>
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
