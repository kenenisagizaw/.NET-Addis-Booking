@model AddisBookingAdmin.Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">

    <!-- Title + Back button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">@ViewData["Title"]</h2>
            <p class="text-body-secondary mb-0">View full information about this service</p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary rounded-3">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 bg-body overflow-hidden">

        <!-- Header -->
        <div class="card-header bg-primary text-white py-4">
            <div class="d-flex align-items-center">
                <div class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center"
                     style="width: 50px; height: 50px;">
                    <i class="bi bi-briefcase-fill fs-4 text-white"></i>
                </div>

                <div class="ms-3">
                    <h4 class="mb-0 fw-semibold">@Model.Name</h4>
                    <small class="opacity-75">Service Information</small>
                </div>
            </div>
        </div>

        <!-- Body -->
        <div class="card-body p-4">

            <div class="row g-4">

                <!-- Name -->
                <div class="col-md-6">
                    <div class="p-3 border rounded-4 bg-body">
                        <small class="text-body-secondary fw-semibold">
                            <i class="bi bi-card-text me-1"></i> Name
                        </small>
                        <div class="fs-5 fw-bold mt-1">@Model.Name</div>
                    </div>
                </div>

                <!-- Price -->
                <div class="col-md-6">
                    <div class="p-3 border rounded-4 bg-body">
                        <small class="text-body-secondary fw-semibold">
                            <i class="bi bi-cash-stack me-1"></i> Price
                        </small>
                        <div class="fs-5 fw-bold mt-1 text-success">
                            @Model.Price.ToString("N2") Birr
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <div class="p-3 border rounded-4 bg-body">
                        <small class="text-body-secondary fw-semibold">
                            <i class="bi bi-info-circle me-1"></i> Description
                        </small>
                        <p class="mb-0 mt-2 text-body">
                            @(string.IsNullOrWhiteSpace(Model.Description) ? "No description provided." : Model.Description)
                        </p>
                    </div>
                </div>

            </div>

        </div>

        <!-- Footer -->
        <div class="card-footer bg-body border-0 p-4 d-flex justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-warning btn-lg rounded-3 fw-semibold">
                <i class="bi bi-pencil-square me-1"></i> Edit Service
            </a>
        </div>

    </div>
</div>
