@model IEnumerable<AddisBookingAdmin.Models.Service>

@{
    ViewData["Title"] = "My Services";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">

    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h2 class="fw-bold mb-1">@ViewData["Title"]</h2>
            <p class="text-body-secondary mb-0">Manage your services, edit details, or remove items</p>
        </div>

        <div class="d-flex gap-2">
            <div class="input-group">
                <span class="input-group-text bg-body">
                    <i class="bi bi-search"></i>
                </span>
                <input id="serviceSearch"
                       type="text"
                       class="form-control bg-body text-body"
                       placeholder="Search services..." />
            </div>

            <a asp-action="Create" class="btn btn-primary rounded-3 fw-semibold">
                <i class="bi bi-plus-circle me-1"></i> Add Service
            </a>
        </div>
    </div>

    <!-- Flash Message -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-4" role="alert">
            <i class="bi bi-check-circle-fill me-1"></i>
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Table Card -->
    <div class="card shadow-sm border-0 rounded-4 bg-body overflow-hidden">
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="servicesTable">
                    <thead class="table-light position-sticky top-0" style="z-index: 1;">
                        <tr>
                            <th class="ps-4">Name</th>
                            <th style="width: 160px;">Price</th>
                            <th>Description</th>
                            <th class="text-end pe-4" style="width: 220px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-body-secondary py-5">
                                    <i class="bi bi-inbox fs-2 d-block mb-2"></i>
                                    No services found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var service in Model)
                            {
                                <tr class="service-row">
                                    <td class="ps-4 fw-semibold service-name">@service.Name</td>

                                    <td class="fw-semibold text-success">
                                        @service.Price.ToString("N2") Birr
                                    </td>

                                    <td class="service-desc text-body">
                                        <span class="d-inline-block text-truncate" style="max-width: 520px;"
                                              title="@service.Description">
                                            @(string.IsNullOrWhiteSpace(service.Description) ? "â€”" : service.Description)
                                        </span>
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@service.Id"
                                               class="btn btn-outline-info btn-sm"
                                               title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@service.Id"
                                               class="btn btn-outline-warning btn-sm"
                                               title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>

                                            <button class="btn btn-outline-danger btn-sm"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal-@service.Id"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal-@service.Id" tabindex="-1"
                                             aria-labelledby="deleteModalLabel-@service.Id" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content bg-body text-body border-0 rounded-4 shadow">
                                                    <div class="modal-header border-0">
                                                        <h5 class="modal-title fw-bold" id="deleteModalLabel-@service.Id">
                                                            <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                                                            Confirm Delete
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>

                                                    <div class="modal-body pt-0">
                                                        Are you sure you want to delete
                                                        <span class="fw-semibold">@service.Name</span>?
                                                        <div class="text-body-secondary small mt-2">
                                                            This action cannot be undone.
                                                        </div>
                                                    </div>

                                                    <div class="modal-footer border-0">
                                                        <button type="button" class="btn btn-outline-secondary rounded-3" data-bs-dismiss="modal">
                                                            Cancel
                                                        </button>

                                                        <form asp-action="Delete" method="post" class="m-0">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@service.Id" />
                                                            <button type="submit" class="btn btn-danger rounded-3 fw-semibold">
                                                                Yes, Delete
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // simple client-side search filter
        (function () {
            const input = document.getElementById('serviceSearch');
            const rows = document.querySelectorAll('#servicesTable tbody .service-row');

            function normalize(s) { return (s || '').toLowerCase().trim(); }

            input?.addEventListener('input', function () {
                const q = normalize(input.value);

                rows.forEach(row => {
                    const name = normalize(row.querySelector('.service-name')?.innerText);
                    const desc = normalize(row.querySelector('.service-desc')?.innerText);
                    const show = !q || name.includes(q) || desc.includes(q);
                    row.classList.toggle('d-none', !show);
                });
            });
        })();
    </script>
}
