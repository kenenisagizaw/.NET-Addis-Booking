@model Provider

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">

    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Provider Dashboard</h2>
            <p class="text-body-secondary mb-0">Manage your business and services easily</p>
        </div>
        <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2 rounded-pill">
            <i class="bi bi-check-circle-fill me-1"></i> Active
        </span>
    </div>

    <!--  Stats Section -->
    <div class="row g-4 mb-4">

        <!-- Services Count -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 bg-body">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-body-secondary mb-1 fw-semibold">Total Services</p>
                        <h2 class="fw-bold mb-0">@Model.Services?.Count()</h2>
                    </div>
                    <div class="bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 55px; height: 55px;">
                        <i class="bi bi-gear-fill fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row g-4">

        <!-- Provider Info Card -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 bg-body">
                <div class="card-body p-4">

                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center"
                             style="width: 50px; height: 50px;">
                            <i class="bi bi-building fs-4"></i>
                        </div>
                        <div class="ms-3">
                            <h4 class="mb-0 fw-semibold">@Model.BusinessName</h4>
                            <small class="text-body-secondary">Business Information</small>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="p-3 rounded-4 border bg-body">
                                <small class="text-body-secondary">Business Name</small>
                                <div class="fw-semibold fs-6">@Model.BusinessName</div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="p-3 rounded-4 border bg-body">
                                <small class="text-body-secondary">Phone Number</small>
                                <div class="fw-semibold fs-6">@Model.Phone</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <a asp-controller="Service" asp-action="Index"
                           class="btn btn-primary btn-lg rounded-3 fw-semibold">
                            <i class="bi bi-gear-fill me-2"></i> Manage Services
                        </a>
                    </div>

                </div>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 bg-body">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-lightning-charge-fill text-warning me-2"></i>
                        Quick Action
                    </h5>

                    <div class="d-grid">
                        <a asp-controller="Service" asp-action="Create"
                           class="btn btn-outline-primary rounded-3">
                            <i class="bi bi-plus-circle me-2"></i> Add New Service
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
