@{
    ViewData["Title"] = "Apply to Become a Provider";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <!-- Page Header -->
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary mb-3">Apply to Become a Provider</h1>
                <p class="lead text-muted">Join our network of trusted service providers and grow your business with us.</p>
            </div>

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-plus-fill fs-2 me-3"></i>
                        <div>
                            <h4 class="mb-1">Provider Application Form</h4>
                            <p class="mb-0 opacity-75">Fill in all required details below</p>
                        </div>
                    </div>
                </div>
                
                <div class="card-body p-4 p-lg-5">
                    @if (TempData["ApplicationSuccess"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                            <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                            <div>
                                <h5 class="alert-heading mb-1">Application Submitted Successfully!</h5>
                                <p class="mb-0">@TempData["ApplicationSuccess"]</p>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        
                        <div class="text-center mt-4">
                            <a href="/" class="btn btn-outline-primary">
                                <i class="bi bi-house-door me-2"></i>Return to Home
                            </a>
                        </div>
                    }
                    else
                    {
                        <!-- Error Alert -->
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center mb-4" role="alert">
                                <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                                <div>
                                    <h6 class="alert-heading mb-1">Error!</h6>
                                    <p class="mb-0">@ViewBag.Error</p>
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <!-- Application Form -->
                        <form asp-action="Apply" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                            <!-- Personal Information Section -->
                            <div class="mb-5">
                                <h5 class="text-primary mb-3 pb-2 border-bottom">
                                    <i class="bi bi-person-badge me-2"></i>Personal Information
                                </h5>
                                
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="fullName" class="form-label fw-semibold">Full Name *</label>
                                        <input type="text" id="fullName" name="fullName" class="form-control form-control-lg" 
                                               placeholder="Abebe Bekele" required>
                                        <div class="invalid-feedback">
                                            Please enter your full name.
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label for="phone" class="form-label fw-semibold">Phone Number *</label>
                                        <input type="tel" id="phone" name="phone" class="form-control form-control-lg" 
                                               placeholder="+251 9XXXXXXXX" required>
                                        <div class="invalid-feedback">
                                            Please enter a valid phone number.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Business Information Section -->
                            <div class="mb-5">
                                <h5 class="text-primary mb-3 pb-2 border-bottom">
                                    <i class="bi bi-shop me-2"></i>Business Information
                                </h5>
                                
                                <div class="mb-3">
                                    <label for="businessName" class="form-label fw-semibold">Business Name *</label>
                                    <input type="text" id="businessName" name="businessName" class="form-control form-control-lg" 
                                           placeholder="My Business" required>
                                    <div class="invalid-feedback">
                                        Please enter your business name.
                                    </div>
                                </div>
                            </div>

                            <!-- Document Upload Section -->
                            <div class="mb-5">
                                <h5 class="text-primary mb-3 pb-2 border-bottom">
                                    <i class="bi bi-files me-2"></i>Required Documents
                                </h5>
                                
                                <p class="text-muted mb-4">Please upload clear copies of the following documents (PDF, JPG, PNG). Max file size: 5MB each.</p>
                                
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="card h-100 border">
                                            <div class="card-body">
                                                <div class="d-flex align-items-start mb-3">
                                                    <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                                        <i class="bi bi-credit-card-2-front fs-4 text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="card-title mb-1">National ID *</h6>
                                                        <p class="card-text text-muted small">Government issued identification</p>
                                                    </div>
                                                </div>
                                                <input type="file" id="nationalId" name="nationalId" 
                                                       class="form-control" accept=".pdf,.jpg,.jpeg,.png" required>
                                                <div class="invalid-feedback">
                                                    Please upload your National ID.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="card h-100 border">
                                            <div class="card-body">
                                                <div class="d-flex align-items-start mb-3">
                                                    <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                                        <i class="bi bi-file-earmark-text fs-4 text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="card-title mb-1">Business License *</h6>
                                                        <p class="card-text text-muted small">Valid business registration</p>
                                                    </div>
                                                </div>
                                                <input type="file" id="businessLicense" name="businessLicense" 
                                                       class="form-control" accept=".pdf,.jpg,.jpeg,.png" required>
                                                <div class="invalid-feedback">
                                                    Please upload your Business License.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Terms and Submit -->
                            <div class="mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="terms" required>
                                    <label class="form-check-label" for="terms">
                                        I certify that all information provided is accurate and complete. I agree to the 
                                        <a href="#" class="text-decoration-none">Terms of Service</a> and 
                                        <a href="#" class="text-decoration-none">Privacy Policy</a>.
                                    </label>
                                    <div class="invalid-feedback">
                                        You must agree to the terms before submitting.
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg py-3">
                                    <i class="bi bi-send-fill me-2"></i>Submit Application
                                </button>
                                <button type="reset" class="btn btn-outline-secondary btn-lg py-3">
                                    <i class="bi bi-arrow-clockwise me-2"></i>Reset Form
                                </button>
                            </div>
                        </form>
                        
                        <!-- Additional Info -->
                        <div class="mt-4 pt-3 border-top">
                            <div class="alert alert-info mb-0">
                                <div class="d-flex">
                                    <i class="bi bi-info-circle-fill me-3 fs-5"></i>
                                    <div>
                                        <h6 class="alert-heading">Application Process</h6>
                                        <p class="mb-0 small">Your application will be reviewed within 3-5 business days. You'll receive an email notification once a decision has been made. For inquiries, contact us at support@providerportal.com</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<!-- Form Validation Script -->
<script>
    // Bootstrap form validation
    (function () {
        'use strict'
        
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')
        
        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>

