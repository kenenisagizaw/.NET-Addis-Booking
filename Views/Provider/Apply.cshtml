@{
    ViewData["Title"] = "Apply to Become a Provider";
}

<h2>Apply to Become a Provider</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Apply" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input name="fullName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input name="phone" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Business Name</label>
        <input name="businessName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">National ID (PDF / Image)</label>
        <input type="file" name="nationalId" class="form-control" accept=".pdf,image/*" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Business License (PDF / Image)</label>
        <input type="file" name="businessLicense" class="form-control" accept=".pdf,image/*" required />
    </div>

    <button type="submit" class="btn btn-primary">
        Submit Application
    </button>
</form>
