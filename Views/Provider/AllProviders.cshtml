@model IEnumerable<AddisBookingAdmin.Models.User>
@{
    ViewData["Title"] = "All Providers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>National ID Doc</th>
            <th>Business Doc</th>
            <th>Approved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var provider in Model)
        {
            <tr>
                <td>@provider.FullName</td>
                <td>@provider.Email</td>
                <!-- Removed NationalIdDocUrl, BusinessDocUrl, and ProviderApproved columns and actions -->
            </tr>
        }
    </tbody>
</table>
